.navbar.navbar-static-top.navbar-inverse
  .navbar-inner
    .container
      %ul.nav
        %li= link_to "Home", root_path
        %li= link_to "About", about_path
        %li= link_to "News", posts_path
        %li= link_to "Contact", contact_path
        %li.divider
      %ul.nav.pull-right
        - if current_user
          %li.dropdown
            %a.dropdown-toggle{ 'data-toggle' => "dropdown", :href => "#" }
              =current_user.name
              %b.caret
            %ul.dropdown-menu
              %li= link_to "New Post", new_post_path
              %li.divider
              %li= link_to "Logout", logout_path
        - else
          %li= link_to "Sign Up", signup_path
          = form_tag(sessions_path, :class => 'navbar-form pull-left') do
            = text_field_tag :name, nil, :placeholder => 'username', :class => 'input-small'
            = password_field_tag :password, nil, :placeholder => 'password', :class => 'input-small'
            = button_tag 'Log in', :class => "btn"

        / %li
        /   = form_tag("/search", :method => "get", :class => "navbar-search pull-left") do
        /     = text_field_tag(:q, nil, :placeholder => "Search", :class => "search-query")
